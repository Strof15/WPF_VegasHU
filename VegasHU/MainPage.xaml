<Window x:Class="VegasHU.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:VegasHU"
        mc:Ignorable="d"
        Title="VegasHU Sportfogadás" Height="900" Width="1400" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- ResourceDictionary importálása -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/StyleCard.xaml"/>
                <ResourceDictionary Source="Styles/StyleTabControl.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <!-- Left Side Menu -->
            <DockPanel DockPanel.Dock="Left" Background="#3A3A3A" Width="200">
                <StackPanel>
                    <Image Source="Images/vegashu-img.png" />
                    <Button Margin="0" x:Name="btnHome" Style="{StaticResource MaterialDesignFlatButton}" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="6" FontSize="18" FontWeight="Light" Foreground="White">
                        <StackPanel Orientation="Horizontal" Height="40">
                            <Image Source="Images/001-home.png" Width="35" Margin="5" />
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Light" FontSize="18">Kezdőlap</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Margin="0" x:Name="btnBetting" Style="{StaticResource MaterialDesignFlatButton}" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="6" FontSize="18" FontWeight="Light" Foreground="White">
                        <StackPanel Orientation="Horizontal" Height="40">
                            <Image Source="Images/002-poker-chip.png" Width="35" Margin="5" />
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Light" FontSize="18">Sportfogadás</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Margin="0" x:Name="btnBets" Style="{StaticResource MaterialDesignFlatButton}" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="6" FontSize="18" FontWeight="Light" Foreground="White">
                        <StackPanel Orientation="Horizontal" Height="40">
                            <Image Source="Images/Ticket.png" Width="35" Margin="5" />
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Light" FontSize="18">Fogadásaim</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Margin="0" x:Name="btnSupport" Style="{StaticResource MaterialDesignFlatButton}" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="6" FontSize="18" FontWeight="Light" Foreground="White">
                        <StackPanel Orientation="Horizontal" Height="40">
                            <Image Source="Images/user.png" Width="35" Margin="5" />
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Light" FontSize="18">Profilom</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- Main Content -->
            <Grid Background="#323232">
                <!-- Close Button -->
                <materialDesign:PopupBox HorizontalAlignment="Right" Margin="0 20 20 0" VerticalAlignment="Top" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Height="25">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Button ToolTip="Kijelentkezés az alkalmazásból" Content="Kijelentkezés" x:Name="btnLogout" Click="btnLogout_Click" />
                        <Button ToolTip="Alkalmazás bezárása" Content="Bezárás" x:Name="btnExit" Click="btnExit_Click" />
                    </StackPanel>
                </materialDesign:PopupBox>

                <!-- Name -->
                <TextBlock Text="Sportfogadás" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,60,0,0" Foreground="White" />

                <!-- Cards -->
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,150,20,0">
                        <StackPanel Orientation="Horizontal" x:Name="mainStackPanel">
                            <!-- Dynamically generated cards should be added here -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Icons -->
                <Grid Margin="0 470 0 0">
                    <TabControl Margin="10" x:Name="tabControl" TabStripPlacement="Left">
                        <TabItem x:Name="tabFootball" Style="{StaticResource CustomTabItemStyle}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Image Source="Images/001-football.png" Width="30" Margin="30 15 37 0"/>
                                </StackPanel>
                            </TabItem.Header>
                            <Border Style="{DynamicResource ListedCardBorder}">
                                <StackPanel Style="{DynamicResource ListedCard}">
                                    <Border Style="{DynamicResource ListedCardItemsBorder}" Width="auto" Height="320" Margin="0">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                            <UniformGrid Columns="1" Margin="10">
                                                <!-- Betting Items -->
                                                <StackPanel Style="{DynamicResource ListedCardItems}" Height="60" Margin="5" HorizontalAlignment="Center">
                                                    <Label x:Name="lblDate" Content="10.21" Style="{DynamicResource SmallLabels}" Margin="50 0 0 0"/>
                                                    <Border Style="{DynamicResource ListedCardItemsIcon}">
                                                        <Label>
                                                            <Image Source="Images/001-football.png" Width="20"/>
                                                        </Label>
                                                    </Border>
                                                    <Label x:Name="lblFootballEventName" Content="Fc Barcelona Fog győzni?" Style="{DynamicResource MediumLabels}" Margin="10 12 0 0"/>
                                                    <Label x:Name="lblboolean" Content="Igen" Style="{DynamicResource SmallLabels}" Margin="100 0 0 0"/>
                                                    <Border Height="34" Width="50" Margin="40 0 50 0" BorderBrush="#784599" BorderThickness="1" CornerRadius="5">
                                                        <Button x:Name="lblButton" Style="{DynamicResource MaterialDesignFlatButton}" Background="#784599" Content="2.1" FontSize="14" Foreground="White" />
                                                    </Border>
                                                </StackPanel>
                                                <!-- More betting items can be dynamically added here -->
                                            </UniformGrid>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </TabItem>
                        <TabItem x:Name="tabDarts" Style="{StaticResource CustomTabItemStyle}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Image Source="Images/001-Dart.png" Width="30" Margin="30 15 37 0"/>
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <Label Content="Content goes here..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="tabVolleyball" Style="{StaticResource CustomTabItemStyle}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Image Source="Images/002-volleyball.png" Width="30" Margin="30 15 37 0"/>
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <Label Content="Content goes here..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="tabHockey" Style="{StaticResource CustomTabItemStyle}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Image Source="Images/003-hockey-sticks.png" Width="30" Margin="30 15 37 0"/>
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <Label Content="Content goes here..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="tabBasketball" Style="{StaticResource CustomTabItemStyle}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Image Source="Images/002-basketball.png" Width="30" Margin="30 15 37 0"/>
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <Label Content="Content goes here..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
