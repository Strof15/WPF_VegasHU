<Window x:Class="VegasHU.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:VegasHU"
        mc:Ignorable="d"
        Title="MainPage" Height="800" Width="1000" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- ResourceDictionary importálása -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/StyleCard.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <!-- Színek -->
        <!-- #784599 Lila -->
        <!-- #3A3A3A Világosabb sötét -->
        <!-- #323232 Sötét -->

        <DockPanel>
            <!-- Bal oldali menü -->
            <DockPanel DockPanel.Dock="Left" Background="#3A3A3A" Width="200">
                <StackPanel>
                    <Image Source="Images/vegashu-img.png"></Image>
                    <Button Margin="0" x:Name="btnHome" Style="{StaticResource MaterialDesignFlatButton}" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="6" FontSize="18" FontWeight="Light" Foreground="White">
                        <StackPanel Orientation="Horizontal" Height="40" Width="200">
                            <Image Source="Images/001-home.png" HorizontalAlignment="Left" Width="35" Margin="5"></Image>
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Light" FontSize="18">Kezdőlap</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Margin="0" x:Name="btnBetting" Style="{StaticResource MaterialDesignFlatButton}" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="6" FontSize="18" FontWeight="Light" Foreground="White">
                        <StackPanel Orientation="Horizontal" Height="40" Width="200">
                            <Image Source="Images/002-poker-chip.png" HorizontalAlignment="Left" Width="35" Margin="5"></Image>
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Light" FontSize="18">Sportfogadás</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Margin="0" x:Name="btnSupport" Style="{StaticResource MaterialDesignFlatButton}" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="6" FontSize="18" FontWeight="Light" Foreground="White">
                        <StackPanel Orientation="Horizontal" Height="40" Width="200">
                            <Image Source="Images/003-support.png" HorizontalAlignment="Left" Width="35" Margin="5"></Image>
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Light" FontSize="18">Ügyfélszolgálat</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- Fő tartalom -->
            <Grid Background="#323232">
                <!-- Close button -->
                <materialDesign:PopupBox HorizontalAlignment="Right" Margin="0 20 20 0" VerticalAlignment="Top" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Height="25">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Button ToolTip="Kijelentkezés az alkalmazásból" Content="Kijelentkezés" x:Name="btnLogout" Click="btnLogout_Click"></Button>
                        <Button ToolTip="Alkalmazás bezárása" Content="Bezárás" x:Name="btnExit" Click="btnExit_Click"></Button>
                    </StackPanel>
                </materialDesign:PopupBox>

                <!--name-->
                <TextBlock Text="Sportfogadás" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20 60 0 0" Foreground="White"/>

                <!--Cards-->
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,150,20,0">
                        <StackPanel Orientation="Horizontal">

                            <Border Style="{DynamicResource ColoredStackPanelBorder}">
                                <StackPanel Style="{DynamicResource ColoredStackPanel}">
                                </StackPanel>
                            </Border>
                            <Border Style="{DynamicResource ColoredStackPanelBorder}">
                                <StackPanel Style="{DynamicResource ColoredStackPanel}">
                                </StackPanel>
                            </Border>
                            <Border Style="{DynamicResource ColoredStackPanelBorder}">
                                <StackPanel Style="{DynamicResource ColoredStackPanel}">
                                </StackPanel>
                            </Border>
                            <Border Style="{DynamicResource ColoredStackPanelBorder}">
                                <StackPanel Style="{DynamicResource ColoredStackPanel}">
                                </StackPanel>
                            </Border>
                            <Border Style="{DynamicResource ColoredStackPanelBorder}">
                                <StackPanel Style="{DynamicResource ColoredStackPanel}">
                                </StackPanel>
                            </Border>
                            <Border Style="{DynamicResource ColoredStackPanelBorder}">
                                <StackPanel Style="{DynamicResource ColoredStackPanel}">
                                </StackPanel>
                            </Border>
                            


                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                <!--icons-->

                <!--betts-->
            </Grid>
        </DockPanel>
    </Grid>
</Window>
