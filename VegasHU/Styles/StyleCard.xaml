<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ColoredStackPanelBorder" TargetType="Border">
        <Setter Property="Height" Value="200" />
        <Setter Property="Width" Value="350" />
        <Setter Property="Background" Value="#3A3A3A" />
        <Setter Property="BorderBrush" Value="#784599" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Margin" Value="20" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>

    <Style x:Key="SmallLabels" TargetType="Label">
        <Setter Property="Height" Value="30" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="MediumLabels" TargetType="Label">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0 20 0 0" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="LargeLabels" TargetType="Label">
        <Setter Property="Height" Value="30" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
    </Style>
</ResourceDictionary>